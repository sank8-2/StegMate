    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="20sp">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select File: "
            android:textSize="26sp"
            />-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selectCamBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10sp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/camera_foreground"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selectImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10sp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/image_foreground"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageUpload"
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:src="@drawable/bg"
            android:background="#272727"
            app:shapeAppearanceOverlay="@style/rounded"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20sp">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Key: "
            android:textSize="26sp" />-->

        <EditText
            android:id="@+id/privateKey"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/key_foreground"
            android:drawablePadding="10dp"
            android:hint="Private Key"
            android:textColorHint="@color/white"
            android:paddingRight="20sp"
            android:inputType="number"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20sp">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secret Message: "
            android:textSize="26sp" />-->

        <EditText
            android:id="@+id/secretMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit"
            android:drawableStart="@drawable/message_foreground"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:hint="Secret Message"
            android:textColorHint="@color/white"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="20sp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/encodeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10sp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/go_foreground"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <!--<Button
            android:id="@+id/encodeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:text="Encode"
            app:cornerRadius="0sp" />-->

        <!--<Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:cornerRadius="0sp" />-->


    </LinearLayout>

    <TextView
        android:id="@+id/whether_encoded"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/displayEncodedImage"
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:src="@drawable/bg" />
    </LinearLayout>


</LinearLayout>
