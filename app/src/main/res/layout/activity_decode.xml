<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="20sp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DECODE"
        android:textSize="55sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20sp">

        <!-- <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Select File: "
             android:textSize="26sp"
             android:id="@+id/choose_image_button"
             />
 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/choose_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10sp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/folder_foreground"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />


    </LinearLayout>


    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:src="@drawable/bg"
            android:id="@+id/imageview"/>
    </LinearLayout>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:background="#272727"
            android:src="@drawable/bg"
            app:shapeAppearanceOverlay="@style/rounded"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20sp">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Key: "
            android:textSize="26sp"
            />
        <EditText
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="26sp"
            android:id="@+id/secret_key"
            />-->
        <EditText
            android:id="@+id/secret_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit"
            android:drawableStart="@drawable/key_foreground"
            android:drawablePadding="10dp"
            android:hint="Private Key"
            android:inputType="number"
            android:paddingRight="20sp"
            android:textColorHint="@color/white"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10sp">

        <!--<Button
            android:id="@+id/decode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decode" />-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/decode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10sp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/go_foreground"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/whether_decoded"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>